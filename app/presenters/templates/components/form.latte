<form n:name=$form>
<ul class=error n:if="$form->ownErrors">
	<li n:foreach="$form->ownErrors as $error">{$error}</li>
</ul>

<div class="form">
<div class="form_elem" n:foreach="$form->controls as $input" n:class="$input->required ? required">
	<div class="form_head">{label $input /}</div>
	<div class="form_cont">{input $input} <span class=error n:ifcontent>{$input->error}</span></div>
</div>
</div>
</form>
